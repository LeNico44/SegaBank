<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence" version="2.1">

   <persistence-unit name="SegaBank" transaction-type="RESOURCE_LOCAL">

       <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
       <class>fr.epsi.segabank.model.Compte </class>
       <class>fr.epsi.segabank.model.ComptePayant </class>
       <class>fr.epsi.segabank.model.CompteSimple </class> 
       <class>fr.epsi.segabank.model.CompteEpargne </class>
       <class>fr.epsi.segabank.model.Transaction </class>    
       <class>fr.epsi.segabank.model.Agence</class>
       <class>fr.epsi.segabank.model.Client</class>
       <class>fr.epsi.segabank.model.Adresse</class>
       <properties>
           <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
           <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/segabank?useSSL=false"/>
           <property name="javax.persistence.jdbc.user" value="root"/>
           <property name="javax.persistence.jdbc.password" value=""/>
           <property name="javax.persistence.jdbc.logging.level" value="INFO"/>
           
           <property name="hibernate.hbm2ddl.auto" value="update"/>
           <property name="hibernate.show_sql" value="true"/>
           <property name="hibernate.format_sql" value="true"/>
           <property name="hibernate.use_sql_comments" value="true"/>
           <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5InnoDBDialect" />
       </properties>
   </persistence-unit>

</persistence>
